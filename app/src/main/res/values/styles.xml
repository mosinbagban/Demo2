<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyTextStyle" parent="android:Widget.TextView">
        <item name="android:padding">10dip</item>
        <item name="android:textColor">@color/textHeading</item>
    </style>
    <style name="AboutTextStyle" parent="android:Widget.TextView">
        <item name="android:padding">20dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textColor">@color/textHeading</item>
    </style>
    <style name="MyBoldTextStyle" parent="android:Widget.TextView">
        <item name="android:padding">10dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textHeading</item>
    </style>
    <style name="MyTextStyleWhiteBg" parent="android:Widget.TextView">
        <item name="android:padding">10dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="CalenderTextStyle" parent="android:Widget.TextView">
        <item name="android:padding">1dip</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textHeading</item>
    </style>
    <style name="CalenderHeaderTextStyle" parent="android:Widget.TextView">
        <item name="android:padding">1dip</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
